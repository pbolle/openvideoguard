# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.ImageController.index(page:Int=1)
GET     /image/list/:page               controllers.ImageController.index(page:Int)
GET     /reindex                        controllers.ReindexController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

GET     /resources/*file                controllers.Resource.at(path="/resources", file)
